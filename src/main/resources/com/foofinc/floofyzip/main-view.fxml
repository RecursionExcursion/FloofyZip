<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foofinc.floofyzip.MainViewController">
   <center>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="125.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" text="Mode" fx:id="zipModeButton" onAction="#changeZipMode"/>
                  <Button mnemonicParsing="false" text="Floof" fx:id="floofButton" onAction="#FloofClick"/>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
               <children>
                  <TextField fx:id="fileToZipField" />
                  <Button fx:id="chooseFileButton" mnemonicParsing="false" onAction="#chooseFileToZipButtonClick" text="File" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <TextField fx:id="zipDestinationField" />
                  <Button fx:id="chooseDestinationButton" mnemonicParsing="false" onAction="#chooseZipDestinationButtonClick" text="Destination" />
               </children>
            </HBox>
            <Button fx:id="zipButton" mnemonicParsing="false" onAction="#zipButtonClick" text="Zip" />
         </children>
      </VBox>
   </center>
</BorderPane>
